{
  "manifest_version": 3,
  "name": "Virtual Try-On Extension",
  "version": "1.0.0",
  "description": "Add virtual try-on functionality to e-commerce product pages",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.zalando.com/*",
        "https://www.zalando.de/*",
        "https://www.zalando.fr/*",
        "https://www.zalando.it/*",
        "https://www.zalando.es/*",
        "https://www.zalando.nl/*",
        "https://www.zalando.be/*",
        "https://www.zalando.at/*",
        "https://www.zalando.ch/*",
        "https://www.zalando.pl/*",
        "https://www.zalando.se/*",
        "https://www.zalando.dk/*",
        "https://www.zalando.fi/*",
        "https://www.zalando.no/*",
        "https://www.amazon.com/*",
        "https://www.amazon.de/*",
        "https://www.amazon.co.uk/*",
        "https://www.h-m.com/*",
        "https://www2.hm.com/*",
        "https://www.zara.com/*",
        "https://www.asos.com/*",
        "https://www.nike.com/*",
        "https://www.adidas.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Virtual Try-On"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css", "config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}